<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.account, size: 50), micropost.account %>
  <span class="user"><%= link_to micropost.account.name, micropost.account %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.

  <% if current_user?(micropost.account) %>
    <%= link_to "delete", micropost, method: :delete, data: {confirm: "Are you sure you want to Delete?"} %>
   <% end %>
  </span>
</li>
