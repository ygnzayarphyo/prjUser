<h1>User Detail</h1>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @account %>
        <%= @account.name %>
      </h1>
      Email:<%= @account.email %><br/>
      Password: <%= @account.passsword %><br/>
      Activated: <%= @account.activated %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @account.microposts.any? %>
      <h3>Microposts (<%= @account.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
